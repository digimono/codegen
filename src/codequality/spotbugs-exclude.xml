<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- All bugs in test classes, except for JUnit-specific bugs -->
  <Match>
    <Class name="~.*\.*Test"/>
    <Not>
      <Bug code="IJU"/>
    </Not>
  </Match>
  <Match>
    <Class name="~.*\.generated\..*"/>
  </Match>
  <Match>
    <Class name="com.zhixin.vanilla.common.crypto.RsaCrypto"/>
    <Or>
      <Method name="loadKeyPair"/>
      <Method name="loadKeyPairFromClasspath"/>
    </Or>
    <Bug pattern="PATH_TRAVERSAL_IN"/>
  </Match>
</FindBugsFilter>
